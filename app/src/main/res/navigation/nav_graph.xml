<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/WelcomeFragment">

    <fragment
        android:id="@+id/WelcomeFragment"
        android:name="com.example.audiobookcanvas.WelcomeFragment"
        android:label="@string/welcome_fragment_label"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/actionTextFileSelected"
            app:destination="@id/PreviewTxtFileFragment" />



    </fragment>
    <fragment
        android:id="@+id/PreviewTxtFileFragment"
        android:name="com.example.audiobookcanvas.PreviewTxtFileFragment"
        android:label="@string/preview_txt_fragment_label"
        tools:layout="@layout/fragment_preview_text_file">

        <action
            android:id="@+id/actionCancelProject"
            app:destination="@id/WelcomeFragment" />
        <argument
            android:name="txtFilePath"
            app:argType="string" />
        <argument
            android:name="projFilePath"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.example.audiobookcanvas.SettingsFragment"
        android:label="@string/settings_fragment_label" />
</navigation>