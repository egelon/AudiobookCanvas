<resources>
    <!-- Base application theme. -->
    <style name="Theme.AudiobookCanvas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary50</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary70</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_red_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_red_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/material_dynamic_primary50</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AudiobookCanvas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AudiobookCanvas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AudiobookCanvas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>